<div class="wpsl_locker_widget_cont wpsl_email_widget">

	<div class="wpsl_customizer_primary_bg">

		<span class="wpsl_email_locker_icon dashicons dashicons-lock"></span>
		<h3 class="wpsl_customizer_heading">%locker_header%</h3>
		<p class="wpsl_customizer_desc descone">%locker_message%</p>

	  <form action="" enctype="multipart/form-data" method="post" class="wpsl_unlock_form">
			%hidden_fields%
	    <input type="email" required class="wpsl_text_input wpsl_customizer_textbox" name="email_address" placeholder="E-mail Address" />
	    <input type="submit" value="%submit_label%" name="email_method" class="wpsl_submit_button wpsl_customizer_button" />
	  </form>
		<p class="wpsl_customizer_desc">%locker_message%</p>
	</div>

</div>
